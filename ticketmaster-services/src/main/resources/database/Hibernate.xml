<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
 <bean id="dataSource"
         class="org.springframework.jdbc.datasource.DriverManagerDataSource">
<!-- 	<property name="driverClassName" value="org.h2.Driver" /> -->
	<!--create schema if not exists test\; runscript from 'classpath:/database/schema.sql'\;runscript from 'classpath:/database/import.sql'\; -->
<!-- 	<property name="url" value="jdbc:h2:mem:test;DB_CLOSE_DELAY=-1;INIT=runscript from 'classpath:/database/schema.sql'\;runscript from 'classpath:/database/import.sql'\;" /> -->
	<property name="driverClassName" value="org.postgresql.Driver" />
	<property name="url" value="jdbc:postgresql://localhost:5432/test"/>
	<property name="username" value="postgres" />
	<property name="password" value="123456" />
</bean>

<!-- Hibernate session factory -->
<bean id="sessionFactory"
class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">

    <property name="dataSource">
      <ref bean="dataSource"/>
    </property>

    <property name="hibernateProperties">
       <props>
         <prop key="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</prop>
         <prop key="hibernate.show_sql">true</prop>
         <prop key="hibernate.hbm2ddl.auto">update</prop>
<!--          <prop key="hibernate.hbm2ddl.import_files">/database/schema.sql,/database/import.sql</prop>   -->
         <prop key="hibernate.default_schema">test</prop>
       </props>
    </property>


    <property name="annotatedClasses">
	<list>
		<value>com.ticketmaster.model.Menu</value>
		<value>com.ticketmaster.model.Event</value>
	</list>
    </property>

    </bean>
</beans>